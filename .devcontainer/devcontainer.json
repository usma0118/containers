// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-in-docker
{
  "name": "Containers - DevContainer",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "mcr.microsoft.com/devcontainers/base:bullseye",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "enableNonRootDocker": true,
      "moby": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/dhoeric/features/hadolint:1": {},
    "ghcr.io/devcontainers-extra/features/ansible:2": {},
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {},
    "ghcr.io/devcontainers-extra/features/devcontainers-cli:1": {},
    "ghcr.io/devcontainers-extra/features/direnv:1": {}
  },
  "remoteUser": "vscode",
  "containerUser": "vscode",
  "updateRemoteUserUID": true,
  "remoteEnv": {
    "PODMAN_USERNS": "keep-id"
  },
  "mounts": ["source=bashhistory,target=/home/vscode/.history,type=volume"],
  "customizations": {
    "vscode": {
      "extensions": [
        "redhat.ansible",
        "richie5um2.vscode-sort-json",
        "zainchen.json",
        "esbenp.prettier-vscode",
        "timonwong.shellcheck",
        "robertz.code-snapshot",
        "mitchdenny.ecdc",
        "GitHub.copilot"
      ],
      "settings": {
        "diffEditor.renderSideBySide": true,
        "editor.suggestSelection": "first",
        "editor.tabSize": 4,
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 200,
        "explorer.confirmDelete": false,
        "explorer.confirmDragAndDrop": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "zsh",
        "files.exclude": {
          "**/.classpath": true,
          "**/.DS_Store": true,
          "**/.factorypath": true,
          "**/.git": true,
          "**/.project": true,
          "**/.settings": true,
          "**/*.js": {
            "when": "$(basename).ts"
          }
        }
      }
    }
  }
}
